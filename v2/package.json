{
	"name": "v2",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"clean": "rm -rf dist/ && mkdir dist/",
		"build": "npm run clean; run-p -s build-*; npm run minify-css",
		"build-html": "pug src/pug/pages/*.pug -o dist",
		"build-js": "babel src/js/index.js --out-file dist/index.js",
		"build-styles": "sass -I node_modules src/styles/index.sass:dist/index.css --style compressed",
		"minify-css": "postcss --use autoprefixer -b 'last 2 versions' -o dist/index.css dist/index.css && cssnano dist/index.css dist/index.css",
		"prestart": "npm run clean",
		"start": "run-p -s watch-* start-server",
		"start-server": "browser-sync start --server 'dist' --files 'dist'",
		"watch-html": "npm run build-html -- -wP",
		"watch-styles": "sass -I node_modules --watch src/styles:dist",
		"watch-js": "npm run build-js -- -w"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"autoprefixer": "latest",
		"babel-cli": "^6.24.1",
		"babel-preset-env": "^1.4.0",
		"browser-sync": "latest",
		"cssnano-cli": "latest",
		"npm-run-all": "latest",
		"postcss-cli": "latest",
		"pug-cli": "latest"
	},
	"dependencies": {
		"bulma": "latest",
		"hamburgers": "^0.8.1"
	}
}
